@model ShoppingCartViewModel
@if (Model.ShoppingCart.ShoppingCartItems.Count > 0)
{
    <h2>Your shopping cart</h2>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Book</th>
                <th>Author</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var line in Model.ShoppingCart.ShoppingCartItems)
            {
                <tr>
                    <td class="text-left">@line.Book.Title</td>
                    <td class="text-left">@line.Book.Author</td>
                    <td><a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="RemoveFromShoppingCart" asp-route-bookId="@line.Book.BookId">Remove</a></td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center">
        <a class="btn btn-primary" asp-controller="Order" asp-action="Checkout">Check out</a>
    </div>
}

else
{
    <h2>No books in the shopping cart</h2>

}